@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <div class="row">
        <!-- Sol Taraf: Filtre Alanı -->
        <div class="col-md-3">
            <div class="filter-panel">

                <div class="form-group">
                    <label for="category-select">Category</label>
                    <select id="category-select" class="form-control">
                        <option value="">All</option>
                        <option value="4">T-shirt</option>
                        <option value="5">Shirts</option>
                        <option value="6">Pants</option>
                        <option value="7">Outerwear</option>
                    </select>

                </div>
                <div class="form-group">
                    <label for="min-price">Min Price</label>
                    <input type="number" id="min-price" class="form-control" placeholder="Örn: 50">
                </div>
                <div class="form-group">
                    <label for="max-price">Mak Price</label>
                    <input type="number" id="max-price" class="form-control" placeholder="Örn: 500">
                </div>
                <button id="filter-btn" class="btn btn-primary btn-block">Filter</button>
            </div>
        </div>


        <!-- Sağ Taraf: Ürün Listesi -->
        <div class="col-md-9">

            <div class="container">
                <div class="row my-4">
                    <div class="col-md-6">
                        <input type="text" id="search-box" class="form-control" placeholder="Search products by name or code...">
                    </div>
                    <div class="col-md-6 text-end">
                        <button id="search-btn" class="btn btn-primary">Search</button>
                    </div>
                </div>
                <div class="row">
                    <div id="loading" style="display: none;" class="text-center">
                        <i class="fa fa-spinner fa-spin fa-2x"></i>
                    </div>
                    <div class="row" id="product-list">
                        <!-- Products will be loaded here via AJAX -->
                    </div>
                </div>
            </div>
            <div class="row" id="product-list">
                <!-- Products will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>





<style>
    /* Loading spinner */
    #loading {
        margin: 20px 0;
    }

    .cart-controls {
        display: flex;
        align-items: center;
        gap: 8px; /* Butonlar arası boşluk */
    }

    .btn-custom {
        background-color: #ffffff; /* Buton arka plan rengi */
        color: #000000;
        border: 1px solid #cccccc;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #ffffff;
            border-color: #b5b5b5;
            transform: scale(1.1);
        }

    .remove-from-cart {
        margin-left: 10px;
    }

    .btn-default {
        border: 1px solid #cccccc;
    }

        .btn-default:hover {
            transition: all 0.3s ease;
            background-color: #ffffff;
            border-color: #b5b5b5;
            transform: scale(1.05);
        }

    .modal-header {
    }
</style>
